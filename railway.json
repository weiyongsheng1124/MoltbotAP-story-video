{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "nixpacks": {
      "aptPackages": ["ffmpeg", "imagemagick", "espeak-ng", "python3", "python3-pil"]
    }
  },
  "deploy": {
    "startCommand": "node server.js",
    "restartPolicy": "ON_FAILURE",
    "healthcheckPath": "/health"
  },
  "env": {
    "OPENAI_API_KEY": {
      "description": "Optional: OpenAI API key for premium TTS/images",
      "required": false
    },
    "GITHUB_TOKEN": {
      "description": "GitHub Personal Access Token for auto-uploading videos (optional)",
      "required": false
    }
  }
}
