{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "nixpacks": {
      "aptPackages": ["ffmpeg", "imagemagick", "espeak-ng", "python3", "python3-pil"]
    }
  },
  "deploy": {
    "startCommand": "node server.js",
    "restartPolicy": "ON_FAILURE",
    "healthcheckPath": "/health"
  },
  "env": {
    "OPENAI_API_KEY": {
      "description": "Optional: Add OpenAI API key for premium TTS/images (system works FREE without it)",
      "required": false
    }
  }
}
