# Story Video Generator - Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (required for TTS and image generation)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: FFmpeg path (auto-detected if not set)
# FFMPEG_PATH=/usr/bin/ffmpeg

# Server port
PORT=3000

# Video settings
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30
VIDEO_DURATION=60

# TTS Settings
TTS_VOICE=alloy
TTS_MODEL=tts-1
TTS_SPEED=1.0
